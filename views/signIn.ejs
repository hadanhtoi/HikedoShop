<div class="container-fluid sign">
  <div class="row mt-5">
    <div class="col-md-6 form-1">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Sign In</h1>
        <%# include partials/messages %>
        <form action="/users/signIn" method="POST">
          <div class="form-group">
            <label for="signInInput">Email or phone number</label>
            <input type="text" id="signInInput" name="signInInput" class="form-control"
              placeholder="Enter email or phone number" />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" />
          </div>
        </form>
        <div class="form-footer flex-column">
          <button id="sign-in-email-submit-btn" class="reg-sig-btn" type="submit">Sign In</button>
          <a class="pt-2" id="sign-up-link" href="/users/signUp">No Account? Sign Up</a>
        </div>
      </div>
    </div>
  </div>
</div>