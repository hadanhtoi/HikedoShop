<div class="sign">
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-6 m-auto">
        <div class="card card-body">
          <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Sign In</h1>
          <% include partials/messages %>
          <form class="d-flex flex-column" action="/users/signIn" method="POST">
            <div class="form-group">
              <label for="phone">Phone</label>
              <input type="text" id="phone" name="phone" class="form-control" placeholder="Enter phone number" />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" />
            </div>
            <button type="submit" class="reg-sig-btn">Login</button>
          </form>
          <p class="lead mt-4">
            No Account? <a href="/users/signUp">Register</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>