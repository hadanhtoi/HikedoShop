  <div class="container pt-2 lux-bg full-w">
    <div class="row d-flex flex-column">
      <div class="row justify-content-start">
        <div class="col-12 col-sm-3 text-center pt-2 pb-2 mobile-ms">
          <img class="user-image w-d w-s" src="/images/man-user.png" alt="user image">
        </div>
      </div>
      <div class="row flex-wrap pt-2" style="margin-right: 5px; margin-left: 5px;">
        <div class="col-12 col-sm-3 d-flex text-center flex-column container-profile">
          <span class="mt-3">Phone: <%=user.phone%></span>
          <span class="mt-3">Birthday: <%=user.birthday%></span>
          <span class="mt-3 mb-5">Created at: <%= createdAt %></span>
        </div>
        <div class="col-12 col-sm-8 d-flex flex-column">
            <div class="container container-profile">
              <div class="row top-right-profile flex-column justify-content-center pt-2">
                <% include partials/messages %>
                <form id="edit-top-form" action="/users/profile/editUserProfile" method="post">
                  <div class="form-header d-flex justify-content-between">
                    <h3>Edit Profile</h3>
                    <button id="edit-profile-btn" class="reg-sig-btn edit-profile-btn" type="button">Edit</button>
                  </div>
                  <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder=""
                      value="<%= typeof user.name != 'undefined' ? user.name : '' %>" readonly />
                  </div>
                  <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder=""
                      value="<%= typeof user.email != 'undefined' ? user.email : '' %>" readonly />
                  </div>
                  <div class="form-group">
                    <label for="address">Address:</label>
                    <input type="text" id="address" name="address" class="form-control" placeholder=""
                      value="<%= typeof user.address != 'undefined' ? user.address : '' %>" readonly />
                  </div>
                  <div id="confirmPasswordFormId" class="form-group">
                    <label for="confirmPassword">Confirm Password:</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control-confirm"
                      placeholder="Confirm Password For Change" value="" />
                  </div>
                  <div class="form-footer flex-row justify-content-space">
                    <input class="reg-sig-btn cancel-profile-button" type="button" name="cancel" value="cancel"
                      onClick="window.location.href='/users/profile';" />
                    <button id="save-profile-submit-btn" class="reg-sig-btn save-profile-button" type="submit">Save</button>
                  </div>
                </form>
              </div>
            </div>
          <div class="container container-profile">
            <div class="row bottom-right-profile flex-column justify-content-center">
              <% include partials/messages3 %>
                <form action="/users/profile/changePassword"  method="post">
                  <div class="form-group">
                  <h3>Change Password</h3>
                </div>
                  <div class="form-group">
                    <label for="oldPassword">Confirm Password:</label>
                    <input type="password" id="oldPassword" name="oldPassword" class="form-control-confirm"
                      placeholder="Confirm Password For Change"  />
                  </div>
                  <div class="form-group">
                    <label for="newPassword">New Password:</label>
                    <input type="password" id="newPassword" name="newPassword" class="form-control-confirm"
                      placeholder="Enter New Password" />
                  </div>
                  <div class="form-group">
                    <label for="confirmNewPassword">Confirm New Password:</label>
                    <input type="password" id="confirmNewPassword" name="confirmNewPassword" class="form-control-confirm"
                      placeholder="Confirm New Password For Change" />
                  </div>
                  <div class="form-footer flex-row justify-content-space">
                    <input class="reg-sig-btn cancel-profile-button" type="button" name="cancel" value="cancel"
                      onClick="window.location.href='/users/profile';" />
                    <button id="save-change-submit-btn" class="reg-sig-btn save-profile-button" type="submit">Save</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>