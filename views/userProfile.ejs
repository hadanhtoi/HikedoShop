<div class="full-w lux-bg">
  <div class="container">
    <div class="row d-flex justify-content-center pt-5">
      <div class="form-group d-flex flex-column text-center justify-content-center pt-4 pb-4"
        style="border-radius: 8px; background: white;align-items: center;">
        <img class="user-image w-d w-s" src="/images/man-user.png" alt="user image">
        <span class="mt-3"><%=user.name%></span>
        <span class="mt-3">Email: <%=user.email%></span>
        <span class="mt-3">Phone: <%=user.phone%></span>
        <span class="mt-3">Birthday: <%=user.birthday%></span>
        <span class="mt-3 mb-5">Created at: <%= createdAt %></span>
        <a href="/users/editProfile" class="reg-sig-btn edit button">Edit</a>
      </div>
    </div>
  </div>
</div>