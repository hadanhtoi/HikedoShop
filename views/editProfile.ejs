<div class="container-fluid sign">
  <div class="row mt-5">
    <div class="col-md-6 form-1">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-edit"></i>
          Edit Profile
        </h1>
        <% include partials/messages %>

        <form action="/users/editProfile" method="post">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>" />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>" />
          </div>
          <div class="form-group">
            <label for="newPassword">New Password</label>
            <input type="password" id="newPassword" name="newPassword" class="form-control"
              placeholder="Create Password" />
          </div>
          <div class="form-group">
            <label for="newPassword2">Confirm New Password</label>
            <input type="password" id="newPassword2" name="newPassword2" class="form-control"
              placeholder="Confirm New Password" />
          </div>
          <div class="form-footer flex-row justify-content-space">
            <a href="/users/profile" class="text-center width-20 reg-sig-btn a-button edit button">Cancel</a>
            <button id="save-edit-btn" class="text-center width-20 reg-sig-btn" type="submit">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>